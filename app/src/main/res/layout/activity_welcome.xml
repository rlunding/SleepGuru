<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0A2436"
    tools:context=".WelcomeActivity"
    android:id="@+id/welcome_activity"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >

    <TextView
        android:text="Welcome to\nSleepGuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:fontFamily="sans-serif-light"
        android:textSize="48sp"
        android:textColor="#C0C0C0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="We help you sleep"
        android:id="@+id/slogan"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#C0C0C0"
        android:fontFamily="san-serif-light"
        android:textStyle="italic"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:max="100"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=">Slide to continue"
        android:id="@+id/slide_to_continue"
        android:textColor="#C0C0C0"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:textSize="18sp"
        android:layout_alignTop="@+id/seekbar"
        android:layout_alignStart="@+id/slogan"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

</RelativeLayout>